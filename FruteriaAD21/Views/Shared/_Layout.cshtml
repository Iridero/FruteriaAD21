@inject FruteriaAD21.Services.CategoriasService categorias
@{ 
    var cats = categorias.GetNombresCategorias();
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>FruitStore - La mejor fruteria de la Web</title>
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <header></header>
    <nav>
        <a href="~/Home">Principal</a>
        @foreach (var cat in cats)
        {
            <a asp-action="Categoria" asp-route-id="@cat">@cat</a>
        }
        @*<a href="~/Home/Categoria">Categoria</a>*@
        
    </nav>
    <main>
        @RenderBody()
    </main>
</body>
</html>
