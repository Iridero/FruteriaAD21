@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string cat = ViewBag.Categoria;
}

<h1>@cat</h1>
<div class="productos">
    @foreach (var p in Model)
    {

        <div>
            <img src="~/img_frutas/@(p.Id).jpg" alt="Imagen de @p.Nombre" />
        </div>
        <h2>@p.Nombre</h2>
        <h3>@p.Precio.ToString()</h3>

    }
</div>